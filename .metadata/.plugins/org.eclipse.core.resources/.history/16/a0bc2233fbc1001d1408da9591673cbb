package calculadora;

public class Matematica {
	// Atributos locais
	double a, b;
	
	//MÃ©todo Construtor
	public Matematica(int num_a, int num_b) {
		a = num_a;
		b = num_b;
	}
	
	//Soma
	public double somar() {
		return a + b;
	}
	
	//Subtrair
	public double subtrair() {
		return a - b;
	}
	
	//Multiplicar
	public double multiplicar() {
		return a * b;
	}
	
	//Dividir
	public double dividir() {
		return a / b;
	}
}
